@model VerteBienV1.Models.SUSCRIPCION

@{
    ViewBag.Title = "Crear suscripción";
}

<center>
    <img src="~/Imagenes/Verte Bien Transparente 2.png" width="128" height="128" style="margin-top:2%" />
    <h4>@ViewBag.Title </h4>
    <hr class="w-50" />
</center>
<br />

<form action="/SUSCRIPCIONs/Create" enctype="" method="post" id="formulario">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="card h-100 shadow-lg mb-5 p-2">
                <div class="card-body" style="margin-left:5%">
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-6">
                            @if(ViewBag.membresia != null) { 
                            <p>Este Usuario es @ViewBag.membresia</p>
                            }
                            @Html.LabelFor(model => model.id_usuario, "Usuario", htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                <i class="formulario__validacion-estado control-form-feedback fas fa-times-circle"></i>
                                @Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control control-form" })
                                @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group formulario__grupo" id="grupo__trasaction_reference">

                            @Html.LabelFor(model => model.trasaction_reference, "Referencia de la transacción", htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-11 formulario__grupo-input ">
                                <i class="formulario__validacion-estado control-form-feedback fas fa-times-circle"></i>
                                @Html.EditorFor(model => model.trasaction_reference, new { htmlAttributes = new { @class = "form-control control-form" } })
                                @Html.ValidationMessageFor(model => model.trasaction_reference, "", new { @class = "text-danger" })
                            </div>
                            <p class="formulario__input-error">Por favor introducir un número de tranferencia valido. </p>
                        </div>


                        <div class="form-group formulario__grupo" id="grupo__comentario">

                            @Html.LabelFor(model => model.comentario, "Comentario", htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-11 formulario__grupo-input ">
                                <i class="formulario__validacion-estado control-form-feedback fas fa-times-circle"></i>
                                @Html.EditorFor(model => model.comentario, new { htmlAttributes = new { @class = "form-control control-form" } })
                                @Html.ValidationMessageFor(model => model.comentario, "", new { @class = "text-danger" })
                            </div>
                            <p class="formulario__input-error">Por favor agregar comentario valido. </p>
                        </div>

                        <div class="form-group">
                            <center>
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "btn  btn-outline-warning  ", @style = "", id = "volbtn" })
                                    <input type="submit" value="Crear suscripción" class="btn text-white" style="background-color:#DBA312;" />
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="modal" tabindex="-1" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Verificar formulario
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="p-modal">Por favor verificar que los datos del formulario esten correcto.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

