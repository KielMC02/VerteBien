@model VerteBienV1.Models.PUNTUACION_SERVICIOS

@{
    ViewBag.Title = "Editar";
}

<h2 class="my-4 text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "PUNTUACION_SERVICIOS", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formulario" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">PUNTUAR SERVICIOS </h4>
        <div class="container edi h-75 shadow my-4 p-5 rounded">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_puntuacion_servicio)

            <div class="form-group my-2">
                <b> @Html.LabelFor(model => model.id_usuario, "Usuario", htmlAttributes: new { @class = "control-label col-md-2 " })</b>
                <div class="col-md-10">
                    @Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                <b>  @Html.LabelFor(model => model.id_servicio, "id_servicio", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                <div class="col-md-10">
                    @Html.DropDownList("id_servicio", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.id_servicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                <b> @Html.LabelFor(model => model.id_cita, "id_cita", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                <div class="col-md-10">
                    @Html.DropDownList("id_cita", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.id_cita, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-10 my-1 formulario__grupo" id="grupo__descripcion">
                <b>@Html.LabelFor(model => model.comentario, "Comentario", htmlAttributes: new { @class = "col-md-8 control-label", @style = "margin-top:2%; margin-left:3px;" })</b>
                <div class="col-md-12 formulario__grupo-input">
                    @Html.TextAreaFor(model => model.comentario, new { @class = "form-control formulario__input", id = "descripcion", name = "comentario", @row = "5", onkeyup = "Validate()", onblur = "Validate()" })
                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="formulario__input-error">La descripcion debe ser entre 10 y 150 caracteres</p>
            </div>

            <div class="form-group my-2">
                <b>
                    @Html.LabelFor(model => model.estrellas, "Estrellas", htmlAttributes: new { @class = "control-label " })
                </b>
                <span id="" class="str" data-rating="@Html.DisplayFor(model => model.estrellas)"></span>


            </div>

            <div class="form-group my-2">
                <b>  @Html.LabelFor(model => model.fecha_creacion, "Fecha de creación", htmlAttributes: new { @class = "control-label col-md-8" })</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.fecha_creacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                <b> @Html.LabelFor(model => model.estado, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-10" style="visibility: hidden;">
                @Html.EditorFor(model => model.estrellas, new { htmlAttributes = new { @class = "form-control", id = "resstrella" } })
                @Html.ValidationMessageFor(model => model.estrellas, "", new { @class = "text-danger" })
            </div>


            <div class="modal" tabindex="-1" id="modal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                Verificar formulario
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Por favor verificar que los datos del formulario esten correcto.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 text-center">
                    <input type="submit" value="Guardar" class="btn text-white rounded my-5" style="background-color:#DBA312" />
                    @Html.ActionLink("Volver", "Index", new { }, htmlAttributes: new { @class = "btn btn-outline-warning  rounded my-5", id = "volbtn" })
                </div>
            </div>
        </div>
    </div>
}


