@model IEnumerable<VerteBienV1.Models.PUNTUACION_SERVICIOS>

@{
    ViewBag.Title = "Index";
}


<h2 class="text-center my-4 ">Listado de reviews de servicios</h2>
<div class="table container-fluid">

    <div class="row m-3 justify-content-around">
        @foreach (var item in Model)
        {


            <div class="card rounded col-lg-4 m-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title" style="color:#DBA312"> @Html.DisplayFor(modelItem => item.SERVICIOS.nombre_servicio)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.AspNetUsers.Email)</h6>
                    <p class="card-text comentedit"> "@Html.DisplayFor(modelItem => item.comentario)"</p>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@Html.DisplayFor(modelItem => item.estado)</li>
                        <li class="list-group-item">
                            <span id="st" class="starrr" data-rating=" @Html.DisplayFor(modelItem => item.estrellas)"></span>
                            <span class="text-muted">(@Html.DisplayFor(modelItem => item.estrellas))</span>
                        </li>
                        <li> </li>

                    </ul>
                    <div class="my-2 text-center">

                        @Html.ActionLink("Editar", "Edit", new { id = item.id_puntuacion_servicio }, htmlAttributes: new { @class = "btn text-white rounded ", style = "background-color:#DBA312" })

                        @Html.ActionLink("Detalles", "Details", new { id = item.id_puntuacion_servicio }, htmlAttributes: new { @class = "btn btn-outline-warning btn-sm rounded", id = "volbtn" })

                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id_puntuacion_servicio }, htmlAttributes: new { @class = "btn btn-outline-warning btn-sm rounded", id = "volbtn" })

                    </div>
                    <div class="card-footer mt-2">
                        <small class="text-muted"> @Html.DisplayFor(modelItem => item.fecha_creacion)</small>
                    </div>
                </div>
            </div>
