@model IEnumerable<VerteBienV1.Models.AspNetUsers>

@{
    ViewBag.Title = "Listado de usuarios";
}
@if (ViewBag.notificacion != null)
{
    <script type="text/javascript">
        Swal.fire({
            icon: 'success',
            title: 'Los correos han sido enviados',
            showConfirmButton: false,
            timer: 1500
        })
    </script>
}


<div class="container">
    <center>
        <img src="~/Imagenes/Verte Bien Transparente 2.png" width="128" height="128" style="margin-top:2%" />
        <h4>Listado de Usuarios</h4>
        <hr class="w-50" />
    </center>
    <div class="my-1">
        @Html.ActionLink("Recordatorio", "recordatorioDePago", "SUSCRIPCIONs", null, htmlAttributes: new { @class = "btn text-white col-md-2 col-sm-6 float-right", @style = "background-color:#DBA312; margin-top:2%" })
        @Html.ActionLink("Suspender Usuarios", "suspensionSuscripcion", "SUSCRIPCIONs", null, htmlAttributes: new { @class = "btn text-white col-md-3 col-sm-6 float-right", @style = "background-color:#DBA312; margin-top:2%" })
    </div>

    <form class="row row-cols-lg-12 col-12 col-md-8 g-2 align-content-center">
        <div class="col-md-8 col-sm-6">
            <input type="text" id="Id" name="email" class="form-control col-12" placeholder="Buscar usuario por Email" />
        </div>
        <div class="row row-cols-lg-12 g-2 align-content-center">
            <div class="col-md-8 col-12 ">
                Filtrar por el estado de la cita
                <select class="form-control" style="" name="estatusUserSelec">
                    <option value="">Todos</option>
                    <option value="suspendido">Suspendido</option>
                    <option value="activo">Activo</option>
                    <option value="new">Nuevos</option>
                </select>

            </div>

        </div>
        <div class="col-12 col-md-3">
            <button type="submit" class="btn col-12 text-white" style="background-color:#DBA312">Buscar</button>
        </div>
    </form>
