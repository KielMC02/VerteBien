
@model VerteBienV1.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar cliente";
}

<style>
    .card {
        border: none;
        padding: 10px 50px;
        width: 900px;
        height: 500px;
    }
</style>



@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formulario" }))
{
    @Html.AntiForgeryToken()
    <center>
        @*< i class="far fa-user-circle fa-3x" style="margin-top:2%; color:#DBA312"></i>*@
        <img src="~/Imagenes/verte bien negro.png" alt="Logo" width="128" height="128" style="margin-top:2%" />
        <h4>Registra tu peluquería</h4>
        <hr class="w-50" />
    </center>
    <br />
    <div class="container">
        <center>
            <div class="container  w-auto form_wrapper">

                <div class="card-body">
                    <div class="form row">
                        <fieldset class="msf_hide text-center">

                            <div class="form-group col-12  formulario__grupo " id="grupo__Email">
                                @Html.LabelFor(m => m.Email, new { @class = " control-label col-md-6" })
                                <div class="col-md-8 formulario__grupo-input">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center", id = "Email", name = "Email", placeholder = "Correo@dominio.com" })
                                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                </div>
                                <p class="formulario__input-error">El correo solo puede contener letras, numeros, puntos, guiones y guion bajo. (ejemplo@dominio.com o ejemplo@dominio.com.do)</p>
                            </div>
                            <div class="form-group col-12 formulario__grupo my-4t" id="grupo__Password">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })
                                <div class="col-md-8 formulario__grupo-input">
                                    @Html.TextBoxFor(m => m.Password, new { @class = " form-control formulario__input text-center", type = "password", id = "Password", name = "Password" })
                                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                </div>
                                <p class="formulario__input-error">La contraseña tiene que ser de 4 a 12 dígitos.</p>
                            </div>

                            <div class="form-group col-12 formulario__grupo" id="grupo__ConfirmPassword">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
                                <div class="col-md-8 formulario__grupo-input">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control formulario__input  text-center", id = "ConfirmPassword", name = "ConfirmPassword" })
                                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                </div>
                                <p class="formulario__input-error">Ambas contraseñas deben ser iguales.</p>
                            </div>

                            <div class="mt-2">
                                <input type="button" class="btn btn btn-outline-warning volbtn" name="back" value="Atras" onclick="msf_btn_back()">
                                <input type="button" class="btn btn btn-outline-warning volbtn" name="next" value="Siguiente" onclick="msf_btn_next()">

                                <div class="msf_bullet_o"></div>
                                <div class="msf_line"></div>
                            </div>

                        </fieldset>

                        <fieldset class="msf_hide text-center">
                            <div class="form-group col-md-12 formulario__grupo" id="grupo__nombre">
                                @Html.LabelFor(m => m.nombre, "Nombre", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10 formulario__grupo-input">
                                    @Html.TextBoxFor(m => m.nombre, new { @class = "form-control formulario__input text-center", id = "nombre", name = "nombre" })
                                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                </div>
                                <p class="formulario__input-error">El nombre tiene que ser letras espacion y pueden llevar acento.</p>
                            </div>


                            <div class="form-group col-md-12 formulario__grupo my-4" id="grupo__apellido">
                                @Html.LabelFor(m => m.apellido, "Apellido", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10 formulario__grupo-input">
                                    @Html.TextBoxFor(m => m.apellido, new { @class = "form-control formulario__input text-center", id = "apellido", name = "apellido" })
                                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                </div>
                                <p class="formulario__input-error" id="imgerror">El apellido tiene que ser letras espacion y pueden llevar acento.</p>
                            </div>


                            <div class="form-group col-md-12 formulario__grupo" id="grupo__fecha_nacimiento_">
                                @Html.LabelFor(m => m.fecha_nacimiento_, "Fecha de nacimiento", new { @class = "col-md-6  control-label" })
                                <div class="col-md-10 formulario__grupo-input">
                                    @Html.TextBoxFor(m => m.fecha_nacimiento_, new { @class = "form-control formulario__input text-center", id = "fecha_nacimiento_", name = "fecha_nacimiento_", @type = "date" })
                                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                </div>
                                <p class="formulario__input-error">La fecha tiene que ser día/mes/años</p>
                                <p class="formulario__input-errorr">Tiene que tener al menos 15 años de edad</p>
                            </div>
                            <div class="mt-2">
                                <input type="button" class="btn btn btn-outline-warning volbtn" name="back" value="Atras" onclick="msf_btn_back()">
                                <input type="button" class="btn btn btn-outline-warning volbtn" name="next" value="Siguiente" onclick="msf_btn_next()">

                                <div class="msf_bullet_o"></div>
                                <div class="msf_line"></div>
                            </div>
                        </fieldset>
                        @*<div class="form-group">
                                @Html.LabelFor(m => m.fecha_creacion_, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.fecha_creacion_, new { @class = "form-control" })
                                </div>
                            </div>*@

                        @*<div class="form-group">
                                @Html.LabelFor(m => m.capacidad_simultanea_, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.capacidad_simultanea_, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.estado, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.estado, new { @class = "form-control" })
                                </div>
                            </div>*@
                    </div>

                </div>

            </div>
        </center>
    </div>


    <div class="modal" tabindex="-1" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Verificar formulario
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Por favor verificar que los datos del formulario esten correcto.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <br />


    <div class="form-group">
        <center>
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-lg text-white" style="background-color:#DBA312">Registrar</button>
            </div>
        </center>
    </div>
    <br />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

}
