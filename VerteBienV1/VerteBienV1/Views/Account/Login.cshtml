@using VerteBienV1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}



<section class="" id="loginForm">

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
    {@Html.AntiForgeryToken()


    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/imagenes/img-01.jpg" alt="IMG">
            </div>

            <div class="login100-form validate-form">
                <span class="login100-form-title">
                    Iniciar sesión.
                </span>
                <div class="form-group wrap-input100 validate-input">

                    <div class="wrap-input100 validate-input" data-validate="Es requerido un correo valido:Ejemplo@abc.com">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Correo electronico", @class = "input100" })

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        @* Validation text para mostrar que es requerido--->@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>


                @*  <input class="input100" type="text" name="email" placeholder="Correo electronico">

                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>

                                ////
                                <input class="input100" type="password" name="pass" placeholder="Contraseña">
                                    <span class="focus-input100"></span>
                                    <span class="symbol-input100">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    </span>
                    </span>*@


                <div class="wrap-input100 validate-input" data-validate="Contraseña es requerida">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "input100" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>




                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Login
                    </button>
                </div>


                <div class="text-center p-t-12">
                    <span class="txt1">
                        ¿Olvidaste tu
                    </span>
                    <span class="txt2">
                        @Html.ActionLink(" Contraseña?", "ForgotPassword")
                    </span>

                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="text-center p-t-136 regis mt-5">

                    @Html.ActionLink("Registrarse", "Register")

                    <i class="fa fa-long-arrow-right m-l-8 mt-4 txt1" aria-hidden="true"> </i>

                </div>

            </div>
        </div>

    </div>
}
</section>


