@model VerteBienV1.Models.REDES_SOCIALES

@{
    ViewBag.Title = "Editar Redes sociales";
}

<h4 class="text-center my-3">@ViewBag.Title</h4>

@*@using (Html.BeginForm())*@
@using (Html.BeginForm("Edit", "REDES_SOCIALES", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formulario" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal  card shadow container p-4 my-4 edi rounded">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_redes)


        <span>
            <i class="fab fa-whatsapp sn"></i>
            @Html.LabelFor(model => model.whatsapp, "Whatsapp", htmlAttributes: new { @class = "control-label " })
        </span>
        <div class="form-group my-1 formulario__grupo" id="grupo__whatsapp">
            <div class="col-md-10 formulario__grupo-input">
                @Html.EditorFor(model => model.whatsapp, new { htmlAttributes = new { @class = "form-control formulario__input", id = "whatsapp", name = "whatsapp" } })
                <i class="formulario__validacion-estado fas fa-times-circle"></i>
            </div>
            <p class="formulario__input-error">Número de whatsapp no valido.</p>
        </div>

        <span>
            <i class="fab fa-instagram sn"></i>
            @Html.LabelFor(model => model.instagram, "Instagram", htmlAttributes: new { @class = "control-label " })
        </span>
        <div class="form-group my-1" id="grupo__instagram">
            <div class="col-md-10">
                @Html.EditorFor(model => model.instagram, new { htmlAttributes = new { @class = "form-control", id = "instagram", name = "instagram" } })

                <i class="formulario__validacion-estado fas fa-times-circle"></i>
            </div>
            <p class="formulario__input-error">por favor, introducir link del perfil valido.</p>
        </div>


        <span>
            <i class="fab fa-facebook-f sn"></i>
            @Html.LabelFor(model => model.facebook, "Facebook", htmlAttributes: new { @class = "control-label " })
        </span>
        <div class="form-group my-1" id="grupo__facebook">
            <div class="col-md-10 formulario__grupo-input">
                @Html.EditorFor(model => model.facebook, new { htmlAttributes = new { @class = "form-control", id = "facebook", name = "facebook" } })

                <i class="formulario__validacion-estado fas fa-times-circle"></i>
            </div>
            <p class="formulario__input-error">por favor, introducir link del perfil valido.</p>
        </div>


        <span>
            <i class="fas fa-browser sn"></i>
            @Html.LabelFor(model => model.web_app, "Web app", htmlAttributes: new { @class = "control-label " })
        </span>
        <div class="form-group my-1" id="grupo__web_app">
            <div class="col-md-10">
                @Html.EditorFor(model => model.web_app, new { htmlAttributes = new { @class = "form-control", id = "web_app", name = "web_app" } })
                <i class="formulario__validacion-estado fas fa-times-circle"></i>
            </div>
            <p class="formulario__input-error">por favor, introducir link correcto.</p>
        </div>

        <div class="form-group my-1 formulario__grupo">
            <i class="far fa-user-circle sn"></i>
            @Html.LabelFor(model => model.id_usuario, "Usuario", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10 ">
                @Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control formulario__input", id = "id_usuario", name = "id_usuario" })
                <i class="fas fa-check-circle" style="color: #1ed12d;"></i>
            </div>
        </div>
        <div class="form-group my-1">
            @Html.LabelFor(model => model.estado, "Estado", htmlAttributes: new { @class = "control-label " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="modal" tabindex="-1" id="modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            Verificar formulario
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Por favor verificar que los datos del formulario esten correcto.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group my-1">
            <div class="col-md-offset-2 text-center">
                <input type="submit" value="Guardar" class="btn text-white rounded my-4" style="background-color:#DBA312" />
                @Html.ActionLink("Volver", "Index", new { }, htmlAttributes: new { @class = "btn btn-outline-warning  rounded my-2", id = "volbtn" })
            </div>
        </div>
    </div>
}

